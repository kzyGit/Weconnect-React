{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": ["react"],
    "parser": "babel-eslint",
    "rules": {
      "one-var": 0,
      "semi": ["error", "always"],
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "curly": ["error", "multi-line"],
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "require-jsdoc": ["error", {
          "require": {
              "ClassDeclaration": true
          }
      }]
}}